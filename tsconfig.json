{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    // {
    //   "path": "./tsconfig.app.json"
    // }
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "moduleResolution": "Node",
    "types": [
      "node"
    ],
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "*.ts"],
}
